/*###############################################################
                          nojs - slider
###############################################################*/

/* --------------------------------------------------------------
 * HTML Syntax
 * --------------------------------------------------------------
   <div nojs-slider> 

     <!--- slide 1 --->
     <input nojs-slide-click type="radio" name="groupName" checked>
     <div> <img/> </div>
     
     <!--- slide 2 --->
     <input nojs-slide-click type="radio" name="groupName">
     <div]> <img/> </div>
      
     <!--- slide 3 --->
     <input nojs-slide-click type="radio" name="groupName">
     <div> <img/> </div>  

   </div> 
*/

/*###############################################################
                       nojs - lightbox
###############################################################*/

/* --------------------------------------------------------------
 * HTML Syntax
 * --------------------------------------------------------------

   ------------
    (1) Lightbox
   ------------
   <div nojs-lightbox >
      <img/>
       <input nojs-lightbox-click type="checkbox" > 
       <div> <img/> </div>
    </div>

   --------------------
    (2) Between-slider
   -------------------

   <div nojs-slider> 

     <!--- lightbox-close --->
     <input nojs-lightbox-close type="radio" name="groupName_2" id="close" checked>

     <!--- slide 1 --->
     <input nojs-slide-click type="radio" name="groupName" checked>
     <div> <img/> </div>

     <!--- lightbox 1 --->
     <input nojs-lightbox-item type="radio"> 
     <div> <img/> </div>
     
     <!--- slide 2 --->
     <input nojs-slide-click type="radio" name="groupName">
     <div> <img/> </div>

     <!--- lightbox 2 --->
     <input nojs-lightbox-item type="radio"> 
     <div> <img/> </div>

   </div> 

*/


/*###############################################################
                       nojs - menu
###############################################################*/

/* --------------------------------------------------------------
 * HTML Syntax
 * --------------------------------------------------------------

   -----------------
    (1) with links
   -----------------

    <menu nojs-menu>
      <li><a href="/home">home</a></li>
      <li><a href="/about">about</a>
        <menu>
         <a href="/contact">contact</a>
         <a href="/contact_info">info</a>
         </menu>
      </li>
    </menu>

   ------------------
    (2) with Anchors
   ------------------

    <menu nojs-menu>
      <li><a href="#home" id="home">home</a></li>
      <li><a href="#about">about</a>
        <menu>
         <a href="#contact">contact</a>
         <a href="#contact_info">info</a>
         </menu>
      </li>
    </menu>
  
    <section nojs-menu-section id="home"> text </section>
    <section nojs-menu-section id="about"> text </section>
    <section nojs-menu-section id="contact"> text </section>
    <section nojs-menu-section id="contact_info"> text </section>
*/

/*###############################################################
                       nojs - transform
###############################################################*/

/* --------------------------------------------------------------
 * HTML Syntax
 * --------------------------------------------------------------

  <div nojs-transform> </div> 

  <div nojs-transform="{top / bottom / right / left / front / back / middle}"> </div>

*/

/*###############################################################
                       nojs - transition
###############################################################*/

/* --------------------------------------------------------------
 * HTML Syntax
 * --------------------------------------------------------------

  <div nojs-transition> </div> 

  <div nojs-transition=""> </div> 

*/

/*###############################################################
                       nojs - animation
###############################################################*/

/* --------------------------------------------------------------
 * HTML Syntax
 * --------------------------------------------------------------

  <div nojs-animation> </div> 

  <div nojs-animation=""> </div> 

*/

